{
	"$schema": "https://json.schemastore.org/package",
	"name": "@sepruko/shared-config",
	"version": "0.4.1",
	"description": "Shared configuration files for NPM tools.",
	"keywords": [
		"biome",
		"biomejs",
		"config",
		"configuration",
		"css",
		"ecmascript",
		"graphql",
		"json",
		"jsx",
		"shared",
		"tsconfig",
		"typescript"
	],
	"homepage": "https://github.com/sepruko/npm-shared-config#readme",
	"bugs": "https://github.com/sepruko/npm-shared-config/issues",
	"license": "CC0-1.0",
	"author": "sepruko (https://github.com/sepruko)",
	"contributors": [],
	"files": [
		"src/biome/**/*.json",
		"src/cspell/**/*.json",
		"src/tsconfig/**/*.json"
	],
	"type": "module",
	"exports": {
		"./biome": "./src/biome/biome.full.json",
		"./biome/base": "./src/biome/biome.base.json",
		"./biome/css": "./src/biome/biome.css.json",
		"./biome/full": "./src/biome/biome.full.json",
		"./biome/git": "./src/biome/biome.git.json",
		"./biome/gql": "./src/biome/biome.gql.json",
		"./biome/js": "./src/biome/biome.js.json",
		"./biome/json": "./src/biome/biome.json.json",
		"./cspell": "./src/cspell/cspell.base.json",
		"./tsconfig": "./src/tsconfig/tsconfig.base.json",
		"./tsconfig/base": "./src/tsconfig/tsconfig.base.json",
		"./tsconfig/browser": "./src/tsconfig/tsconfig.browser.json",
		"./tsconfig/browser/test": "./src/tsconfig/tsconfig.browser-test.json",
		"./tsconfig/node": "./src/tsconfig/tsconfig.node.json",
		"./tsconfig/node/test": "./src/tsconfig/tsconfig.node-test.json",
		"./tsconfig/strict": "./src/tsconfig/tsconfig.strict.json",
		"./tsconfig/test": "./src/tsconfig/tsconfig.node-test.json",
		"./tsconfig/test/browser": "./src/tsconfig/tsconfig.browser-test.json",
		"./tsconfig/test/node": "./src/tsconfig/tsconfig.node-test.json",
		"./tsconfig/worker": "./src/tsconfig/tsconfig.worker.json",
		"./tsconfig/es2023": "./src/tsconfig/es2023/tsconfig.base.json",
		"./tsconfig/es2023/base": "./src/tsconfig/es2023/tsconfig.base.json",
		"./tsconfig/es2023/browser": "./src/tsconfig/es2023/tsconfig.browser.json",
		"./tsconfig/es2023/browser/test": "./src/tsconfig/es2023/tsconfig.browser-test.json",
		"./tsconfig/es2023/node": "./src/tsconfig/es2023/tsconfig.node.json",
		"./tsconfig/es2023/node/test": "./src/tsconfig/es2023/tsconfig.node-test.json",
		"./tsconfig/es2023/strict": "./src/tsconfig/es2023/tsconfig.strict.json",
		"./tsconfig/es2023/test": "./src/tsconfig/es2023/tsconfig.node-test.json",
		"./tsconfig/es2023/test/browser": "./src/tsconfig/es2023/tsconfig.browser-test.json",
		"./tsconfig/es2023/test/node": "./src/tsconfig/es2023/tsconfig.node-test.json",
		"./tsconfig/es2023/worker": "./src/tsconfig/es2023/tsconfig.worker.json",
		"./package.json": "./package.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sepruko/npm-shared-config.git"
	},
	"scripts": {
		"format": "biome format --config-path biome.json .",
		"lint": "biome lint --config-path biome.json . && cspell lint -c cspell.config.json .",
		"lint:fix": "biome lint --config-path biome.json --write .",
		"lint:fix:all": "biome lint --config-path biome.json --write --unsafe ."
	},
	"devDependencies": {
		"@biomejs/biome": "~1.9.4",
		"cspell": "^8.15.3"
	},
	"peerDependencies": {
		"@biomejs/biome": "~1.9.4",
		"@types/node": "^20.16.12",
		"cspell": "^8.15.3",
		"typescript": "~5.6.2",
		"vitest": "^2.1.3"
	},
	"peerDependenciesMeta": {
		"@biomejs/biome": {
			"optional": true
		},
		"@types/node": {
			"optional": true
		},
		"cspell": {
			"optional": true
		},
		"typescript": {
			"optional": true
		},
		"vitest": {
			"optional": true
		}
	},
	"engines": {
		"pnpm": "^9.12.1"
	},
	"devEngines": {
		"packageManager": {
			"name": "pnpm",
			"onFail": "error"
		}
	},
	"packageManager": "pnpm@9.12.1"
}
