{
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/refs/tags/v8.15.3/cspell.schema.json",
	"name": "@sepruko/shared-config",
	"version": "0.2",
	"description": "Shared CSpell configuration options.",
	"cache": {
		"cacheFormat": "universal",
		"cacheLocation": "node_modules/.cache/cspell/cspell.cache.json",
		"cacheStrategy": "metadata"
	},
	"allowCompoundWords": true,
	"caseSensitive": true,
	"dictionaries": [
		"bash",
		"biomejs-biome",
		"companies",
		"css",
		"docker",
		"en-common-misspellings",
		"filetypes",
		"fonts",
		"fullstack",
		"git-scm-git",
		"git",
		"google",
		"html-symbol-entities",
		"html",
		"k8s",
		"latex",
		"lorem-ipsum",
		"markdown",
		"mnemonics",
		"node",
		"npm",
		"peoples-names",
		"powershell",
		"public-licenses",
		"rust",
		"shell",
		"software-terms",
		"sql",
		"svelte",
		"terraform",
		"typescript",
		"vim",
		"vue",
		"win32"
	],
	"dictionaryDefinitions": [
		{
			"name": "biomejs-biome",
			"description": "Words, terms & phrases used by the Biome tooling.",
			"useCompounds": true,
			"words": [
				"AnB",
				"Anb",
				"APPROXIMATIVE",
				"Approximative",
				"approximative",
				"BiomeJS",
				"biomejs",
				"GQL",
				"gql",
				"INSTANTIATOR",
				"Instantiator",
				"instantiator",
				"MISREFACTORED",
				"Misrefactored",
				"misrefactored",
				"SHOUTY",
				"Shouty",
				"shouty",
				"VCS",
				"vcs"
			]
		},
		{
			"name": "git-scm-git",
			"description": "Words, terms & phrases used by Git.",
			"useCompounds": true,
			"words": [
				"EOL",
				"eol",
				"SCM",
				"scm"
			]
		}
	],
	"enabledFileTypes": {
		"*": true
	},
	"enableGlobDot": true,
	"features": {
		"weighted-suggestions": true
	},
	"gitignoreRoot": ".",
	"ignorePaths": [
		"**/__*__/**/*",
		"**/.git",
		"**/.pnp.c?js",
		"**/build/**/*",
		"**/cspell.report.json",
		"**/dist/**/*",
		"**/node_modules/**/*",
		"**/out/**/*",
		"**/package-lock.json",
		"**/pnpm-lock*.yaml",
		"**/yarn.lock"
	],
	"globRoot": ".",
	"language": "en",
	"maxDuplicateProblems": 10000,
	"maxNumberOfProblems": 10000,
	"minWordLength": 2,
	"readonly": true,
	"useGitignore": true,
	"validateDirectives": true,
	"words": [
		"MTS",
		"mts",
		"PNP",
		"PnP",
		"pnp"
	]
}
