{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": [],
	"buildOptions": {
		"incremental": true
	},
	"compileOnSave": false,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "${configDir}/src/",
		"composite": true,
		"lib": [
			"ES2022"
		],
		"declarationMap": true,
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"paths": {
			"@/": [
				"./index.ts",
				"./index.tsx",
				"./index.js",
				"./index.jsx"
			],
			"@/*": [
				"./*",
				"./*/index.ts",
				"./*/index.tsx",
				"./*/index.js",
				"./*/index.jsx"
			]
		},
		"preserveConstEnums": true,
		"resolvePackageJsonImports": false,
		"skipLibCheck": true,
		"stripInternal": true,
		"target": "ES2022",
		"types": [],
		"verbatimModuleSyntax": true
	},
	"exclude": [
		"${configDir}/**/*.spec.js",
		"${configDir}/**/*.spec.cjs",
		"${configDir}/**/*.spec.mjs",
		"${configDir}/**/*.spec.jsx",
		"${configDir}/**/*.test.js",
		"${configDir}/**/*.test.cjs",
		"${configDir}/**/*.test.mjs",
		"${configDir}/**/*.test.jsx",
		"${configDir}/**/*.spec.ts",
		"${configDir}/**/*.spec.cts",
		"${configDir}/**/*.spec.mts",
		"${configDir}/**/*.spec.tsx",
		"${configDir}/**/*.test.ts",
		"${configDir}/**/*.test.cts",
		"${configDir}/**/*.test.mts",
		"${configDir}/**/*.test.tsx"
	],
	"include": [
		"${configDir}/src/**/*"
	]
}
