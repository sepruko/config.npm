{
	"$schema": "https://json.schemastore.org/prettierrc",
	"htmlWhitespaceSensitivity": "strict",
	"printWidth": 100,
	"proseWrap": "always",
	"tabWidth": 4,
	"useTabs": true,
	"overrides": [
		{
			"files": [
				"*.md",
				"*.yaml",
				"*.yml"
			],
			"options": {
				"printWidth": 80,
				"singleQuote": true,
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
